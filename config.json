{
  "ui": {
    "window": {
      "title": "Калькулятор",
      "initial_width": 525,
      "initial_height": 500,
      "background_color": "#212224",
      "icon_path": "img/icon.png"
    },
    "fonts": {
      "base_font_size": 15,
      "entry_font_size": 25,
      "options_font_size": 10,
      "button_font": {
        "family": "Arial",
        "weight": "bold"
      },
      "entry_font": {
        "family": "Arial"
      }
    },
    "colors": {
      "background": "#212224",
      "button_default": "#24282c",
      "button_equals": "#307af7",
      "button_clear": "#24282c",
      "text_default": "white",
      "text_clear": "#038575",
      "text_operation": "#327eed",
      "text_memory": "#ffcc00",
      "entry_background": "black",
      "entry_foreground": "white",
      "entry_cursor": "white",
      "frame_background": "#24282c",
      "frame_foreground": "white",
      "selectcolor": "#212224",
      "activebackground": "#24282c",
      "scrollbar": {
        "troughcolor": "black",
        "background": "#636363",
        "bordercolor": "black",
        "arrowcolor": "black"
      }
    },
    "cursors": {
      "default": "spraycan",
      "button": "hand2",
      "checkbox": "pencil",
      "scrollbar": "hand1",
      "entry": "xterm",
      "custom_cursor": {
        "enabled": true,
        "path": "img/clown-face-cursor.png",
        "size": [32, 32],
        "temp_file": "img/temp.cur"
      }
    },
    "scaling": {
      "min_scale_factor": 0.7,
      "max_scale_factor": 2.0
    },
    "layout": {
      "button_width": 60,
      "button_height": 60,
      "button_width_divisor": 10,
      "button_height_divisor": 30,
      "padding": 1
    }
  },
  "sounds": {
    "default_options": {
      "enabled": true,
      "type": "drums"
    },
    "files": {
      "drums": [
        "sounds/drums1.wav",
        "sounds/drums2.wav",
        "sounds/drums3.wav",
        "sounds/drums4.wav",
        "sounds/drums5.wav",
        "sounds/drums6.wav"
      ],
      "memes": [
        "sounds/o-privet.wav",
        "sounds/shizofreniya.wav",
        "sounds/nani.wav",
        "sounds/aaaa-za-donbass.wav",
        "sounds/nea.wav",
        "sounds/vstavay.wav",
        "sounds/nyanpasu.wav",
        "sounds/sasha-tyi-yuvelir.wav",
        "sounds/ne-nado-diadia.wav",
        "sounds/diadia-sasha.wav",
        "sounds/mem1.wav",
        "sounds/mem2.wav",
        "sounds/mem3.wav",
        "sounds/mem4.wav",
        "sounds/mem5.wav"
      ]
    },
    "volume": {
      "auto_max_volume": true,
      "unmute_on_play": true
    }
  },
  "history": {
    "window": {
      "title": "История",
      "width": 450,
      "height": 500,
      "scale_factor": 0.9
    },
    "display": {
      "font": {
        "family": "Arial",
        "size": 12
      },
      "label_width": 30,
      "padding": {
        "row": 2,
        "side": 5
      }
    }
  },
  "images": {
    "history_button": {
      "path": "img/history.png",
      "size": [50, 50]
    }
  },
  "menu": {
    "labels": {
      "functions": "Функции",
      "history": "История",
      "decorators": "Декораторы",
      "sounds": "Звуки",
      "view": "Вид"
    },
    "history_items": {
      "save_expressions": "Сохранение выражений",
      "change_limit": "Изменить лимит истории",
      "change_path": "Изменить путь файла истории",
      "show_history": "Показать историю"
    },
    "decorator_items": {
      "change_precision": "Изменить точность"
    },
    "sound_items": {
      "sounds_enabled": "Звуки включены",
      "sound_type": "Тип звука",
      "drums": "Барабаны",
      "memes": "Мемы"
    },
    "view_items": {
      "show_options_panel": "Показать панель опций"
    }
  },
  "status_bar": {
    "messages": {
      "execution_time": "Время выполнения: {time:.3f} мс",
      "memory_operation": "Операция с памятью: {operation}",
      "error": "Ошибка: {error}"
    }
  },
  "default_options": {
    "functions": {
      "basic_operations": true,
      "advanced_operations": false,
      "memory_operations": false
    },
    "history": {
      "save_expressions": true,
      "limit": 100,
      "file_path": "history.txt"
    },
    "decorators": {
      "timing": false,
      "logging": false,
      "validation": true
    }
  },
  "platform_specific": {
    "windows": {
      "cursor_loading": true
    },
    "linux": {
      "cursor_loading": false
    },
    "darwin": {
      "cursor_loading": false
    }
  },
  "grid_layout": {
    "entry_row": 2,
    "buttons_start_row": 3,
    "status_bar_row": 100,
    "options_panel_row": 1
  },
  "file_paths": {
    "temp_directory": "temp/",
    "sounds_directory": "sounds/",
    "images_directory": "img/"
  }
}